{% extends 'base.html.twig' %}

{% block title %}Permission{% endblock %}

{% block body %}
    <h1>Permission</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ permission.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ permission.createdAt ? permission.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsAuthorized</th>
                <td>{{ permission.isAuthorized ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_permission_index') }}">back to list</a>

    <a href="{{ path('app_permission_edit', {'id': permission.id}) }}">edit</a>

    {{ include('permission/_delete_form.html.twig') }}
{% endblock %}
