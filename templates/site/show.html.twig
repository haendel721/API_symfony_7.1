{% extends 'base.html.twig' %}

{% block title %}Site{% endblock %}

{% block body %}
    <h1>Site</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ site.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ site.name }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ site.url }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ site.categorySite.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('app_site_index') }}">back to list</a> 

    <a class="btn btn-outline-secondary" href="{{ path('app_site_edit', {'id': site.id}) }}">edit</a><br>

    {{ include('site/_delete_form.html.twig') }}
{% endblock %}
