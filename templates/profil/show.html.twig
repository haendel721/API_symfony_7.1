{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    {% if 'ROLE_ADMIN' in app.user.roles %}
        <h1>Status : Admin <hr> Name : {{ user.name }}</h1>
    {% else %}
        <h1>Status : User simple <hr> Name : {{ user.name }}</h1>
    {% endif %}  

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ user.surname }}</td>
            </tr>
            <tr>
                <th>DateNaissance</th>
                <td>{{ user.dateNaissance ? user.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Lot</th>
                <td>{{ user.lot }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ user.tel }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ user.image }}</td>
            </tr>
            <tr>
                <th>SituationFamiliale</th>
                <td>{{ user.situationFamiliale }}</td>
            </tr>
            <tr>
                <th>LieuNaissance</th>
                <td>{{ user.lieuNaissance }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ user.genre }}</td>
            </tr>
            <tr>
                <th>Fonction</th>
                <td>{{ user.fonction }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_profil_index') }}">back to list</a>

    <a href="{{ path('app_profil_edit', {'id': user.id}) }}">edit</a>

    {{ include('profil/_delete_form.html.twig') }}
{% endblock %}
