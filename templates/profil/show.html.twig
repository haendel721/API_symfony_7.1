{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    {% if 'ROLE_ADMIN' in app.user.roles %}
        <h1>Status : Admin <hr> Nom : {{ user.name }}</h1>
    {% else %}
        <h1>Status : Utilisateur simple <hr> Nom : {{ user.name }}</h1>
    {% endif %}  

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.surname }}</td>
            </tr>
            <tr>
                <th>Date Naissance</th>
                <td>{{ user.dateNaissance ? user.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Lot</th>
                <td>{{ user.lot }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ user.tel }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ user.image }}</td>
            </tr>
            <tr>
                <th>Situation Familiale</th>
                <td>{{ user.situationFamiliale }}</td>
            </tr>
            <tr>
                <th>Lieu Naissance</th>
                <td>{{ user.lieuNaissance }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ user.genre }}</td>
            </tr>
            <tr>
                <th>Fonction</th>
                <td>{{ user.fonction }}</td>
            </tr>
        </tbody>
    </table>

    <a  class="btn btn-outline-info" href="{{ path('app_profil_index') }}">Retour à la liste</a>

    <a  class="btn btn-outline-secondary" href="{{ path('app_profil_edit', {'id': user.id}) }}">Modifier</a>

    {{ include('profil/_delete_form.html.twig') }}
{% endblock %}
